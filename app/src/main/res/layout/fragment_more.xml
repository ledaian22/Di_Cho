<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/tv_sellwithus"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/banhangcungdicho_icon"
        android:drawableRight="@drawable/next_icon"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text_input_bg"
        android:gravity="center"
        android:padding="20dp"
        android:text="Bán hàng cùng đi chợ"
        android:textSize="20dp" />


    <TextView
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/tuihang_icon"
        android:drawableRight="@drawable/next_icon"

        android:id="@+id/tv_my_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sellwithus"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text_input_bg"
        android:gravity="center"
        android:padding="20dp"
        android:text="Đơn hàng của tôi"
        android:textSize="20dp" />

    <TextView
        android:drawableLeft="@drawable/thongbao_icon"
        android:drawableRight="@drawable/next_icon"

        android:id="@+id/tv_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_my_bill"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text_input_bg"
        android:gravity="center"
        android:padding="20dp"
        android:text="Thông Báo"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_message"
        android:drawableLeft="@drawable/nhantin_icon"
        android:drawableRight="@drawable/next_icon"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_noti"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text_input_bg"
        android:gravity="center"
        android:padding="20dp"
        android:text="Tin nhắn"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tv_info"
        android:drawableLeft="@drawable/thongtin_icon"
        android:drawableRight="@drawable/next_icon"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/text_input_bg"
        android:gravity="center"
        android:padding="20dp"
        android:text="Thông tin ứng dụng"
        android:textSize="20dp" />


</RelativeLayout>