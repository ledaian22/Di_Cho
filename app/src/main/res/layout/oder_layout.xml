<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/gray"
    android:layout_height="150dp">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_oder_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Username"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_oder_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_oder_item_name"
        android:text="Phone Number"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_oder_item_totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Total Price"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_oder_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_oder_item_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_oder_item_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_oder_item_address"

        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Date and time"
        android:textStyle="bold" />

    <Button
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_show_all_product"
        android:layout_below="@+id/tv_oder_item_date_time"
        android:text="Show This Oder Product"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>